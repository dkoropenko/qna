<% if answer.errors.present? %>
  $('<%= "#answer-id-#{answer.id} .answer-errors" %>').html('<%= render 'shared/errors', resource: answer %>');
<% else %>
  $('<%= "#answer-id-#{answer.id}" %>').html('<%= j render answer %>');
  $('<%= "form#edit-answer-#{answer.id}" %>').addClass('hidden')
<% end %>
